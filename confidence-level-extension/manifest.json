{
  "manifest_version": 3,
  "name": "Confidence Level",
  "version": "1.0",
  "description": "Displays AI output confidence and evidence grounding.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["tooltip.css"]
    }
  ]
}
