{
  "manifest_version": 3,
  "name": "Hallucination Detector",
  "version": "1.0.0",
  "description": "Detect potential hallucinations by comparing prompts and responses",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Hallucination Detector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}